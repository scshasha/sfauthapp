<!DOCTYPE html>
<html lang="uk">
<head>
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <meta name="description" content="">
    <meta name="author" content="">
    <link href="https://127.0.0.1:8000/font-awesome/css/font-awesome.min.css" rel="stylesheet">
    <link rel="stylesheet" href="https://127.0.0.1:8000/bootstrap-4.0.0-dist/css/bootstrap.min.css">
    <link href="https://127.0.0.1:8000/font-awesome/css/bootstrap.min.css" rel="stylesheet">
    {% block stylesheets %}{% endblock %}
</head>
<body class="container-fluid">
    <header>
        <nav class="navbar navbar-dark">
            <div class="navbar-brand">EVENTS</div>
            <ul>
                <li class="nav-item"><a href="{{ path('api.v1.event.show') }}" class="nav-link">Available events</a></li>

                <li class="nav-item">
                    {% if is_granted("IS_AUTHENTICATED_REMEMBERED") %}

                    {% else %}
                        <a class="nav-link" href="{{ path('fos_user_security_login') }}">{{ 'layout.login'|trans({}, 'FOSUserBundle') }}</a>
                    {% endif %}
                </li>

            </ul>
        </nav>
    </header>
        {% if app.request.hasPreviousSession %}
            {% for type, messages in app.session.flashbag.all() %}
                {% for message in messages %}
                    <div class="flash-{{ type }} alert alert-dismissible">
                        {{ message }}
                    </div>
                {% endfor %}
            {% endfor %}
        {% endif %}
        <div class="container">
            {% block fos_user_content %}
            {% endblock fos_user_content %}
        </div>
    {% block javascripts %}{% endblock %}
    <script src="https://127.0.0.1:8000/font-awesome/js/jquery.js"></script>
    <script src="https://127.0.0.1:8000/bootstrap-4.0.0-dist/js/bootstrap.js"></script>
    <script>
        jQuery(document).ready(() => {
            console.log("Ready");
        });
    </script>
    </body>
</html>
